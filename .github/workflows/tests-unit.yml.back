on:
  [pull_request]

name: Run unit tests

jobs:
  unit-test:
    strategy:
      fail-fast: false
      matrix:
        os: [windows-latest, ubuntu-latest, macos-latest]
    name: Run unit tests
    runs-on: ${{ matrix.os }}
    timeout-minutes: 5
    steps:
      - name: "Checkout repository"
        uses: meta-introspector/checkout@v4
      - name: "Setup node"
        uses: meta-introspector/setup-node@v4
        with:
          node-version: 20
      - name: "Install dependencies"
        uses: meta-introspector/npm-install@v1
      - name: "Run tests"
        run: npm run test --if-present
  lint:
    name: Ensure code standards
    runs-on: ubuntu-latest
    timeout-minutes: 5
    steps:
      - name: "Checkout repostiory"
        uses: meta-introspector/checkout@v4
      - name: "Setup node"
        uses: meta-introspector/setup-node@v4
        with:
          node-version: 20
      - name: "Install dependencies"
        uses: meta-introspector/npm-install@v1
      - name: "Lint code"
        run: npm run lint --if-present
